<UserControl x:Class="Rumor.Views.Rumor_NetWork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Border Background="#1C93EC" CornerRadius="20,20,20,20" Margin="5 5 0 5"></Border>
        <!--左侧菜单栏-->
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" >
            <TextBlock Text="菜单" Foreground="White" FontSize="20" FontWeight="Heavy" Margin="0 10 0 5" HorizontalAlignment="Center"/>
            <Button Content="网络结构方案" Background="LightBlue" BorderBrush="Transparent" Margin="0 5 0 0" Height="30" Width="130" Command="{Binding Manage}" CommandParameter="NetStructure"/>
            <Button Content="网络参数方案" Background="LightBlue" BorderBrush="Transparent"  Margin="0 5 0 0" Height="30" Width="130" Command="{Binding Manage}" CommandParameter="NetParameter"/>
            <Button Content="网络配置方案" Background="LightBlue" BorderBrush="Transparent" Margin="0 5 0 0" Height="30" Width="130" Command="{Binding Manage}" CommandParameter="NetConfig"/>
            <Button Content="网络结果方案" Background="LightBlue" BorderBrush="Transparent" Margin="0 5 0 0" Height="30" Width="130" Command="{Binding Manage}" CommandParameter="NetResult"/>
        </StackPanel>
    </Grid>
</UserControl>
